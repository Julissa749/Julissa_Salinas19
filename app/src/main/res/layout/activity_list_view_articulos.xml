<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    tools:context=".list_view_articulos">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="22dp"
        android:background="#D50000"
        android:gravity="center"
        android:text="@string/ArticulLIST"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewPersonas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchview"
        android:layout_width="411dp"
        android:layout_height="626dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="409dp"
            android:layout_height="41dp"
            android:background="#B51414"
            android:gravity="center"
            android:text="@string/CopyRightlist"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listViewPersonas"
            app:layout_constraintVertical_bias="1.0" />

        <SearchView
            android:id="@+id/searchview"
            android:layout_width="411dp"
            android:layout_height="33dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>